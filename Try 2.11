import React, { useState, useEffect, useRef } from 'react';
import { Bell, TrendingUp, TrendingDown, Activity, Settings, RefreshCw } from 'lucide-react';

const NiftyMonitor = () => {
  const [currentPrice, setCurrentPrice] = useState(23487.50);
  const [openPrice, setOpenPrice] = useState(23487.50);
  const [changePercent, setChangePercent] = useState(0);
  const [changeValue, setChangeValue] = useState(0);
  const [isMonitoring, setIsMonitoring] = useState(false);
  const [notifications, setNotifications] = useState([]);
  const [threshold, setThreshold] = useState(1);
  const [lastAlert, setLastAlert] = useState(null);
  const [priceHistory, setPriceHistory] = useState([0]);
  const intervalRef = useRef(null);
  const notificationIdRef = useRef(0);
  const audioRef = useRef(null);

  // More realistic price simulation
  const simulatePrice = () => {
    const marketHours = new Date().getHours();
    const isMarketOpen = marketHours >= 9 && marketHours < 16;
    
    // Higher volatility during market hours
    const volatility = isMarketOpen ? 0.0015 : 0.0005;
    const trend = Math.sin(Date.now() / 10000) * 0.0003;
    const randomWalk = (Math.random() - 0.5) * 2 * volatility;
    
    setCurrentPrice(prev => {
      const newPrice = prev * (1 + trend + randomWalk);
      return Math.max(newPrice, 20000);
    });
  };

  useEffect(() => {
    const change = currentPrice - openPrice;
    const percent = (change / openPrice) * 100;
    setChangePercent(percent);
    setChangeValue(change);

    // Update price history for chart
    setPriceHistory(prev => [...prev.slice(-59), percent]);

    if (isMonitoring) {
      const isAboveThreshold = percent >= threshold;
      const isBelowThreshold = percent <= -threshold;
      
      if (isAboveThreshold || isBelowThreshold) {
        const alertType = isBelowThreshold ? 'down' : 'up';
        
        if (lastAlert !== alertType) {
          const notification = {
            id: notificationIdRef.current++,
            time: new Date().toLocaleTimeString('en-IN'),
            date: new Date().toLocaleDateString('en-IN'),
            type: alertType,
            percent: percent.toFixed(2),
            price: currentPrice.toFixed(2),
            change: change.toFixed(2)
          };
          
          setNotifications(prev => [notification, ...prev.slice(0, 19)]);
          setLastAlert(alertType);
          
          // Play alert sound
          if (audioRef.current) {
            audioRef.current.play().catch(e => console.log('Audio play failed:', e));
          }
          
          // Browser notification
          if ('Notification' in window && Notification.permission === 'granted') {
            new Notification(`üîî Nifty Alert: ${alertType === 'up' ? 'üìà Rising' : 'üìâ Falling'}`, {
              body: `Nifty ${alertType === 'up' ? 'gained' : 'lost'} ${Math.abs(percent).toFixed(2)}%\nCurrent: ‚Çπ${currentPrice.toFixed(2)} (${change >= 0 ? '+' : ''}${change.toFixed(2)})`,
              requireInteraction: true,
              tag: 'nifty-alert'
            });
          }
        }
      } else {
        setLastAlert(null);
      }
    }
  }, [currentPrice, openPrice, isMonitoring, threshold, lastAlert]);

  const startMonitoring = async () => {
    if ('Notification' in window && Notification.permission === 'default') {
      await Notification.requestPermission();
    }

    setIsMonitoring(true);
    setOpenPrice(currentPrice);
    setChangePercent(0);
    setChangeValue(0);
    setPriceHistory([0]);
    setLastAlert(null);
    
    intervalRef.current = setInterval(simulatePrice, 1000);
  };

  const stopMonitoring = () => {
    setIsMonitoring(false);
    if (intervalRef.current) {
      clearInterval(intervalRef.current);
    }
  };

  const resetSystem = () => {
    setOpenPrice(currentPrice);
    setChangePercent(0);
    setChangeValue(0);
    setNotifications([]);
    setLastAlert(null);
    setPriceHistory([0]);
  };

  const getAlertStatus = () => {
    if (!isMonitoring) return { text: 'Monitoring Inactive', color: 'bg-gray-100 text-gray-700' };
    if (changePercent <= -threshold) return { text: 'üö® ALERT: Market Falling!', color: 'bg-red-500 text-white animate-pulse' };
    if (changePercent >= threshold) return { text: 'üö® ALERT: Market Rising!', color: 'bg-green-500 text-white animate-pulse' };
    return { text: '‚úì Active - No Alerts', color: 'bg-blue-500 text-white' };
  };

  const status = getAlertStatus();

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 p-4">
      <audio ref={audioRef} src="data:audio/wav;base64," />
      
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="text-center mb-6">
          <h1 className="text-4xl font-bold text-white mb-2 flex items-center justify-center gap-3">
            <Activity className="w-10 h-10 text-blue-400" />
            Nifty 50 Live Monitor
          </h1>
          <p className="text-blue-200">Real-time market movement tracking with instant alerts</p>
        </div>

        {/* Alert Status Banner */}
        <div className={`${status.color} rounded-lg p-4 mb-6 text-center font-bold text-lg shadow-lg`}>
          {status.text}
        </div>

        {/* Main Dashboard */}
        <div className="grid md:grid-cols-2 gap-6 mb-6">
          {/* Price Card */}
          <div className="bg-white/10 backdrop-blur-md rounded-xl shadow-2xl p-6 border border-white/20">
            <div className="flex items-center justify-between mb-4">
              <h2 className="text-xl font-semibold text-white">Current Price</h2>
              <Bell className={`w-6 h-6 ${isMonitoring ? 'text-green-400 animate-pulse' : 'text-gray-400'}`} />
            </div>
            
            <div className="text-5xl font-bold text-white mb-2">
              ‚Çπ{currentPrice.toFixed(2)}
            </div>
            
            <div className="flex items-center gap-2 mb-4">
              {changePercent >= 0 ? (
                <TrendingUp className="w-6 h-6 text-green-400" />
              ) : (
                <TrendingDown className="w-6 h-6 text-red-400" />
              )}
              <span className={`text-2xl font-bold ${changePercent >= 0 ? 'text-green-400' : 'text-red-400'}`}>
                {changePercent >= 0 ? '+' : ''}{changePercent.toFixed(2)}%
              </span>
              <span className={`text-lg ${changePercent >= 0 ? 'text-green-300' : 'text-red-300'}`}>
                ({changeValue >= 0 ? '+' : ''}{changeValue.toFixed(2)})
              </span>
            </div>

            {/* Mini Chart */}
            <div className="h-20 flex items-end gap-1">
              {priceHistory.slice(-40).map((val, idx) => (
                <div
                  key={idx}
                  className={`flex-1 ${val >= 0 ? 'bg-green-400' : 'bg-red-400'} rounded-t opacity-70`}
                  style={{ height: `${Math.abs(val) * 20 + 5}%`, minHeight: '2px' }}
                />
              ))}
            </div>
          </div>

          {/* Controls Card */}
          <div className="bg-white/10 backdrop-blur-md rounded-xl shadow-2xl p-6 border border-white/20">
            <div className="flex items-center gap-2 mb-4">
              <Settings className="w-6 h-6 text-white" />
              <h2 className="text-xl font-semibold text-white">Controls</h2>
            </div>

            <div className="space-y-4">
              <div>
                <label className="text-white text-sm mb-2 block">Alert Threshold: ¬±{threshold}%</label>
                <input
                  type="range"
                  min="0.5"
                  max="3"
                  step="0.1"
                  value={threshold}
                  onChange={(e) => setThreshold(parseFloat(e.target.value))}
                  className="w-full"
                  disabled={isMonitoring}
                />
              </div>

              <div className="grid grid-cols-2 gap-3">
                {!isMonitoring ? (
                  <button
                    onClick={startMonitoring}
                    className="col-span-2 bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-lg transition shadow-lg"
                  >
                    ‚ñ∂ Start Monitoring
                  </button>
                ) : (
                  <button
                    onClick={stopMonitoring}
                    className="col-span-2 bg-red-500 hover:bg-red-600 text-white font-bold py-4 px-6 rounded-lg transition shadow-lg"
                  >
                    ‚è∏ Stop Monitoring
                  </button>
                )}
                
                <button
                  onClick={resetSystem}
                  className="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg transition flex items-center justify-center gap-2"
                >
                  <RefreshCw className="w-4 h-4" />
                  Reset
                </button>

                <button
                  onClick={() => setNotifications([])}
                  className="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-4 rounded-lg transition"
                >
                  Clear Alerts
                </button>
              </div>

              <div className="bg-white/5 rounded-lg p-3 text-sm text-blue-200">
                <p>‚Ä¢ Updates every second</p>
                <p>‚Ä¢ Desktop notifications enabled</p>
                <p>‚Ä¢ Audio alerts on threshold breach</p>
              </div>
            </div>
          </div>
        </div>

        {/* Notifications */}
        <div className="bg-white/10 backdrop-blur-md rounded-xl shadow-2xl p-6 border border-white/20">
          <h2 className="text-2xl font-bold text-white mb-4">Alert History ({notifications.length})</h2>
          
          {notifications.length === 0 ? (
            <div className="text-center py-12 text-gray-400">
              <Bell className="w-16 h-16 mx-auto mb-4 opacity-50" />
              <p>No alerts yet. Start monitoring to receive notifications when market moves ¬±{threshold}%</p>
            </div>
          ) : (
            <div className="space-y-3 max-h-96 overflow-y-auto">
              {notifications.map((notif) => (
                <div
                  key={notif.id}
                  className={`p-4 rounded-lg ${
                    notif.type === 'up' 
                      ? 'bg-green-500/20 border border-green-500/50' 
                      : 'bg-red-500/20 border border-red-500/50'
                  }`}
                >
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-3">
                      {notif.type === 'up' ? (
                        <TrendingUp className="w-8 h-8 text-green-400" />
                      ) : (
                        <TrendingDown className="w-8 h-8 text-red-400" />
                      )}
                      <div>
                        <p className="font-bold text-white text-lg">
                          {notif.type === 'up' ? 'üìà Market Up' : 'üìâ Market Down'} {Math.abs(notif.percent)}%
                        </p>
                        <p className="text-sm text-gray-300">
                          ‚Çπ{notif.price} ({notif.change >= 0 ? '+' : ''}{notif.change})
                        </p>
                      </div>
                    </div>
                    <div className="text-right">
                      <p className="text-sm text-white font-semibold">{notif.time}</p>
                      <p className="text-xs text-gray-400">{notif.date}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  );
};

export default NiftyMonitor;
